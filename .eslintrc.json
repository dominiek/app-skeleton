{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "env": {
    "browser": true
  },
  "globals": {
    "STAGING_HOSTNAME": true,
    "PRODUCTION_HOSTNAME": true
  },
  "settings": {
    "import/resolver": {
      "node": {
          "moduleDirectory": ["node_modules", "src"]
      }
    }
  },
  "rules": {
    "comma-dangle": 0,
    "eol-last": 0,
    "react/jsx-filename-extension" : 0,
    "react/prefer-stateless-function": 0,
    "react/prop-types": 0,
    "import/first": 0,
    "arrow-body-style": 0,
    "no-prototype-builtins" : 0,
    "arrow-parens": 0,
    "react/no-unescaped-entities": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "jsx-a11y/label-has-for": 0,
    "prefer-destructuring": 0
  }
}